<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management</title>
    <style>
        body {
            font-family: 'Georgia', serif;
            background-color: #f5e3e0;
            color: #333333;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333333;
            text-align: center;
            margin-bottom: 40px;
        }

        a, button {
            background-color: #d9a5a4;
            color: #fff;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            display: inline-block;
        }

        a:hover, button:hover {
            background-color: #f2c97c;
            transform: scale(1.05);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 40px;
        }

        th, td {
            text-align: left;
            padding: 12px;
            border-bottom: 1px solid #f2c97c;
        }

        th {
            background-color: #d9a5a4;
            color: #fff;
        }

        td {
            background-color: #fff;
        }

        tr:hover td {
            background-color: #f1f1f1;
        }

        form {
            display: inline;
        }

        button {
            border: none;
            cursor: pointer;
        }

        button:focus {
            outline: none;
        }

        a:focus, button:focus {
            outline: 2px solid #d9a5a4;
        }

        .add-student {
            margin-bottom: 20px;
            display: block;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Student Management</h1>
        <a href="/create" class="add-student">Add New Student</a>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.name %></td>
                        <td><%= student.email %></td>
                        <td><%= student.age %></td>
                        <td>
                            <a href="/<%= student._id %>">Edit</a>
                            <form action="/<%= student._id %>/delete" method="POST">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
